<%= form_with(model: role) do |form| %>
  <% if role.errors.any? %>
    <div style="color: red">
      <h2>Помилки, які перешкоджають збереженню даних:</h2>
      <ul>
        <% role.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "Назва ролі користувача", style: "display: block" %>
    <%= form.text_field :role %>
  </div>

  <div><%= form.submit "Зберегти" %></div>
<% end %>
