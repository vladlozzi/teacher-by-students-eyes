<%= form_with(model: student_distribution) do |form| %>
  <% if student_distribution.errors.any? %>
    <div style="color: red">
      <h2>Помилки, які перешкоджають збереженню даних:</h2>
      <ul>
        <% student_distribution.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label "Студент/студентка:" %>
    <%= form.select :student_id, students_for_select, required: true %>
  </div>

  <div>
    <%= form.label "Академгрупа:" %>
    <%= form.select :group_id, groups_for_select, required: true %>
  </div>

  <div>
    <%= form.label "Код навчання в ЄДЕБО:" %>
    <%= form.number_field :edebo_study_code, required: true %>
  </div>

  <div>
    <%= form.label "Корпоративний email:" %>
    <%= form.email_field :email, required: true, size: 50 %>
  </div>

  <div>
    <%= form.submit "Зберегти" %>
  </div>
<% end %>
