<%= form_with(model: unit) do |form| %>
  <% if unit.errors.any? %>
    <div style="color: red">
      <h2>Помилки, які перешкоджають збереженню даних:</h2>
      <ul>
        <% unit.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "Назва структурної одиниці", style: "display: block" %>
    <%= form.text_field :name, size: 50 %>
  </div>

  <div>
    <%= form.label "Вид", style: "display: block" %>
    <%= form.text_field :unit_type, size: 20 %>
  </div><br>

  <div>
    <%= form.submit "Зберегти" %>
  </div>
<% end %>
